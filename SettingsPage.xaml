             x:Class="GreentegCoreApp1.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <AbsoluteLayout HorizontalOptions="Center">
                <Label HorizontalOptions="Start" Text="F°     " ></Label>
                <Switch x:Name="CORF" HorizontalOptions="End"></Switch>
                 
            </AbsoluteLayout>
            <Button Text="Close" Clicked="Button_Clicked_1"></Button>
